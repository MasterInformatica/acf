    rl [refresco-botellon-propio] :
	p( S, E, < N, s(N1), s(O) > , W, N2 ) B 
      => 
	p( S, E, < N, N1, O > , W, N2 ) B .
    
    rl [refresco-botellon-ajeno] :
	p( S, E, < N, s(N1), 0 > , W, N2 )  
	p( S', E', < N3, N4, s(O') > , W', N5 ) B 
      => 
	p( S, E, < N, N1, 0 > , W, N2 ) 
	p( S', E', < N3, N4, O' > , W', N5 ) B .

