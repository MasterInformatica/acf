    eq peter = p("Peter", 20, < 2 , 2 , 1 > , vip, 0 ) .
    eq lucille = p("Lucille", 16, < 2 , 1 , 0 > , novip, 0 ) .

    op local : -> Local .
    eq local = l(5, 6, 5, dabi) .
    
    op inicio : -> Estado .
    eq inicio = [ mike peter lucille, lv | lv , local ] .


